doctype html
html
  head
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    link(href="//cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css", rel="stylesheet")
    link(rel="stylesheet", href="//cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css")
  body
    section#app
      section.hero.is-primary
        .hero-body
          .container
            .columns.is-vcentered
              .column
                h1.title CSS Color Playground
                h2.subtitle Transform your CSS color string to <strong>every formats</strong>.
                p
                  a(href="https://github.com/Dafrok/css-color-playground", target="_blank").button.is-small
                    span.icon.is-small
                      i.fa.fa-star
                    span Star
                  span &nbsp;
                  a(href="https://github.com/Dafrok/css-color-playground/fork", target="_blank").button.is-small
                    span.icon.is-small
                      i.fa.fa-github
                    span Fork
              .column
                p.control.has-icon.is-expanded
                  input.input.is-large(v-model="inputValue", placeholder="CSS color (e.g. #f00)", type="text", @mouseenter="focus")
                  i.fa.fa-css3(v-bind:style="{color: inputValue}")
      section.section
        section.container
          h3.title OUTPUT
          .box
            each val in ['HEX', 'RGB', 'RGBA', 'HSL', 'HSLA', 'STRING']
              label.label=val
              p.control.has-addons
                input.input.is-flat.is-expanded(v-model=val, readonly, type="text", @mouseenter="focus")
                button.button(@click="copy("+val+")")
                  span.icon.is-small
                    i.fa.fa-copy
    script(src="all.min.js")
