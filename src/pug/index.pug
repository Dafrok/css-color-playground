doctype html
html
  head
    meta(name="viewport", content="initial-scale=1.0, user-scalable=no")
    link(href="//cdn.bootcss.com/font-awesome/4.6.3/css/font-awesome.min.css", rel="stylesheet")
    link(rel="stylesheet", href="//cdn.bootcss.com/bulma/0.2.1/css/bulma.min.css")
  body
    section#app
      section.hero.is-primary
        .hero-body
          .container
            .columns.is-vcentered
              .column
                h1.title CSS Color Playground
                h2.subtitle Transform your CSS color to <strong>every formats</strong>.
              .column
                p.control.has-icon.is-expanded
                  input.input.is-flat(v-model="inputValue", placeholder="CSS color", type="text", @mouseenter="focus")
                  i.fa.fa-css3
      section.section
        section.container
          h3.title OUTPUT
          .box
            each val in ['HEX', 'RGB', 'RGBA', 'HSL', 'HSLA', 'STRING']
              label.label=val
              p.control.has-addons
                input.input.is-flat.is-expanded(v-model=val, readonly, type="text", @mouseenter="focus")
                button.button(@click="copy("+val+")")
                  span.icon.is-small
                    i.fa.fa-copy
    script(src="all.min.js")
